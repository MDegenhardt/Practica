<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="labs.sdm.practica">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity android:name=".MainActivity" android:label="@string/title_activity_main">

            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".SettingsActivity"
            android:label="@string/title_activity_settings"
            android:parentActivityName=".MainActivity"
            >
            <!-- Enable up navigation for backwards compatibility -->
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="labs.sdm.practica.MainActivity" />
        </activity>

        <activity android:name=".CreditsActivity"
            android:label="@string/title_activity_credits"
            android:parentActivityName=".MainActivity"
            >
            <!-- Enable up navigation for backwards compatibility -->
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="labs.sdm.practica.MainActivity" />
        </activity>

        <activity android:name=".ScoresActivity"
            android:label="@string/title_activity_scores"
            android:parentActivityName=".MainActivity"
            >
            <!-- Enable up navigation for backwards compatibility -->
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="labs.sdm.practica.MainActivity" />
        </activity>


        <activity android:name=".PlayActivity"
            android:label="@string/title_activity_play"
            android:parentActivityName=".MainActivity"
            >
            <!-- Enable up navigation for backwards compatibility -->
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="labs.sdm.practica.MainActivity" />
        </activity>


    </application>

</manifest>
